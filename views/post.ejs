<!-- post.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Create New Post</title>
</head>

<body>
    <%- include('header') %>

        <h1 class="page-header">Create New Post</h1>

        <div class="post-container">
            <form method="POST" action="/post" class="form-post">
                <div class="post-title">
                    <label for="title">Title:</label><br>
                    <input class="title-input" type="text" id="title" name="title" required><br><br>
                </div>
                <label for="content">Write your post Below:</label><br>
                <textarea id="content" name="content" rows="4" required
                    style="width: 100%; height: 100%;"></textarea><br><br>
                <button class="post-input" type="submit">Create Post</button>
            </form>
        </div>

</body>

</html>